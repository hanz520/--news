/**index.wxss**/
.list .item{
  width: 100%;
  height: 240rpx;
  padding: 20rpx;
  display: flex;
  justify-content: flex-start;
  border-bottom: 2rpx solid #eee;
  overflow: hidden;
  box-sizing: border-box;
}
.list .item .cover{
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
  box-sizing: border-box;
}
.list .item .cover image{
  width: 100%;
  height: 100%;
}
.list .item .text{
  padding-left: 20rpx;
  box-sizing: border-box;
  flex-shrink: 1;
  /* display: flex;
  flex-direction: column; */
}
.list .item .text .title{
  width: 490rpx;
  font-size: 32rpx;
  font-weight: 700;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; 
  line-height: 100%;
  margin-bottom: 15rpx;
}
.list .item .text .summary{
  color: #666;
  font-size: 28rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  line-height: 140%;
  margin-bottom: 15rpx;
}
.list .item .text .other{
  color: #999;
  line-height: 100%;
  white-space: nowrap;
  font-size: 24rpx;
}
.list .item .text .other text:first-child{
  margin-right: 20rpx;
}
.item-hover{
  background: #eee;
}

.load-more{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 24rpx;
  color: #999;
}
.load-more .icon{
  position: relative;
  top: 7rpx;
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  background-image: url('data:image/png;base64,');
  background-size:100% 100%;
  animation: rotate 1s infinite linear;
  margin-right: 10rpx;
}
@keyframes rotate {
  from { transform: rotate(0) }
  to { transform: rotate(360deg) }
}

.backtop{
  position: fixed;
  bottom: 30rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: #fff;
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.3);
}
.backtop-hover{
  background: #f5bd47;
}
.backtop image{
  width: 100%;
  height: 100%;
}